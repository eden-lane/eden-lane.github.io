---
import projects from '../data/projects.json';
---

<style>
  article {
    margin-top: 40px;
  }

  h5 {
    margin: 0;
  }

  a {
    text-decoration: none;
    color: inherit;
    flex-grow: 1;
  }

  .projects {
    margin-top: 10px; 
    display: flex;
    gap: 10px;
  }

  .project {
    display: flex;
    gap: 10px;
    border: 1px solid #dedede;
    border-radius: 4px;
    padding: 10px;
    flex: 1 0;
    font-size: 14px;
    box-shadow: 0 0 1px 1px rgb(0 0 0 / 5%);
    transition: all 0.5s;
  }

  .project:hover {
    box-shadow: 0 1px 1px 1px rgb(0 0 0 / 10%);
  }

  .icon {
    flex-shrink: 0;
    height: 32px;
    width: 32px;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 50%;
  }

  .links {
    list-style: none;
    margin: 0;
    padding: 0;
    display: flex;
    gap: 5px;
  }

  .link + .link::before {
    content: 'âˆ™'
  }

  @media(max-width: 700px) {
    .projects {
      flex-direction: column;
    }
  }
</style>
<section>
  <h4>Projects</h4>
  
  <div class="projects">
  {
    projects.map(project => (
      <div class="project">
        <div class="icon">
          <img width="24" height="24" src={project.logo} />
        </div>
        <div>
          <h4>{project.title}</h4>
          <p>
            {project.description}
          </p>
          <ul class="links">
            {
              project.links.site && (
                <li class="link">
                  <a href={project.links.site} target="_blank">Site</a>
                </li>
              )
            }
            {
              project.links.github && (
                <li class="link">
                  <a href={project.links.github} target="_blank">Github</a>
                </li>
              )
            }
          </ul>
        </div>
      </div>
    ))
  }    
  </div>
</section>