---
import pages from "../data/pages.json";
---

<style>
  .pages {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: 16px;
  }

  .page {
    grid-column: span 2;
    box-sizing: border-box;
    background-color: #F9F9F9;
    border-radius: 5px;
    padding: 16px;
    transition: all ease-out 300ms;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 16px;
    text-decoration: none;
    border: 1px solid transparent;
  }

  .page-wide {
    grid-column: span 3;
  }

  .page:hover {
    /* box-shadow: 0 2px 5px rgba(0, 0, 0, 0.15); */
    border: 1px solid #a8d6ff;
  }

  @media(max-width: 780px) {
    .page {
      grid-column: span 5;
    }
  }

  .content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .icon {
    flex-shrink: 0;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .icon img {
    height: 64px;
    width: 64px;
  }

  .title {
    font-size: 20px;
    font-weight: normal;
  }

  .description {
    font-size: 14px;
    flex-grow: 1;
    color: #444;
  }

  .more {
    font-size: 12px;
  }
</style>

<section class="pages">
  <a href="/projects/week" class="page page-wide">
    <div class="info">
      <h2 class="title">Week</h2>
      <p class="description">
        The project I'm currently working on. It's a task manager with an
        integrated calendar.
      </p>
    </div>
    <div class="icon">
      <img src="/icons/week.svg" />
    </div>
  </a>
  <a href="/apps" class="page">
    <div class="info">
      <h2 class="title">Applications</h2>
      <p class="description">
        Apps that I use or can recommend.
      </p>
    </div>
    <div class="icon">
      <img src="/icons/app.svg" />
    </div>
  </a>
